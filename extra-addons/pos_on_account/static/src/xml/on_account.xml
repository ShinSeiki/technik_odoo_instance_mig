<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-extend="PaymentScreenWidget">
        <t t-jquery="div.payment-buttons" t-operation="append">
            <div class="button js_onAccount">
                on Account
            </div>
        </t>
    </t>

    <t t-name="SaleRefPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup_so_ref">
                <p class="body"><t t-esc="widget.options.body || '' "/></p>
                <div class='selection scrollable-y touch-scrollable' style="height: 70%;">
                    <table border="1" class="body" cellspacing="1px" cellpadding="10px" text-align="center" width="100%" style="border:1px;margin:auto;">
                        <thead>
                            <tr>
                                <th width="60%">Product</th>
                                <th>Qty</th>
                            </tr>
                        </thead>
                        <tbody class="order-line-data">
                        </tbody>
                    </table>
                </div>
                <div class="footer">
                    <div class="button cancel">
                        OK
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="OnAccountOrderButton">
        <div class='control-button'>
            <i class="fa fa-bars" />On Account
        </div>
    </t>

    <t t-name="OnAccountOrderLines">
        <tr class='order-line' t-att-data-id='order.id'>
            <td><t t-esc='order.name' /></td>
            <td><t t-esc='order.partner_id[1]' /></td>
            <td><t t-esc='order.date_order'/></td>
            <td><t t-esc='order.amount_total'/></td>
            <td width="12.7%" class="on-account-button" t-att-data-id='order.id'>
                <span class="order-button square">On Account</span>
            </td>
        </tr>
    </t>

    <t t-name="OnAccountOrdersWidget">
        <div class="clientlist-screen screen">
            <div class="screen-content">
                <section class="top-content">
                    <span class='button back'>
                        <i class='fa fa-angle-double-left'></i>
                        Cancel
                    </span>
                    <span class='searchbox' style="margin-left:217px !important;">
                        <input placeholder='Search by Customer' />
                        <span class='search-clear'></span>
                    </span>
                </section>
                <section class="full-content">
                    <div class='window'>
                        <section class='subwindow'>
                            <div class='subwindow-container'>
                                <div class='subwindow-container-fix touch-scrollable scrollable-y'>
                                    <table class='client-list'>
                                        <thead>
                                            <tr>
                                                <th>Order Ref.</th>
                                                <th>Partner</th>
                                                <th>Order Date</th>
                                                <th>Amount Total</th>
                                            </tr>
                                        </thead>
                                        <tbody class='on-account-order-lines'>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>

    <t t-name="OrderAddOnAccountWidget">
        <div class="modal-dialog">
            <div class="popup popup-selection add_on_account_pos">
                <p class="title">Add On Account Product</p>
                <div class='selection scrollable-y touch-scrollable'>
                    <table id="order-list" cellspacing="1px" cellpadding="10px" text-align="center" width="100%" style="border:1px;padding-left:1.16cm;">
                        <thead>
                            <tr>
                                <td>ID</td>
                                <td>Price</td>
                                <td>Name</td>
                                <td>Qty</td>
                                <td>On Account Quantity</td>
                            </tr>
                        </thead>
                        <tbody id="order-table-body">
                        </tbody>
                    </table>
                </div>
                <div class="footer">
                    <div class="button confirm">
                            Add On Account
                        </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

</templates>